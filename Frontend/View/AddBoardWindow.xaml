<Window x:Class="Frontend.View.AddBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Board" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtPlaceholder" Text="Enter Board Name" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="Gray"/>
        <TextBox x:Name="txtBoardName" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch" GotFocus="txtBoardName_GotFocus" TextChanged="txtBoardName_TextChanged"/>
        <Button x:Name="btnAdd" Grid.Row="1" Margin="10" Content="Add" Click="btnAdd_Click" HorizontalAlignment="Right" />
    </Grid>
</Window>