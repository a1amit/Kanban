<Window x:Class="Frontend.View.AddNewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Task" Height="auto" Width="400">

    <Grid Background="White" Margin="20">

        <StackPanel Margin="0,0,0,20">
            <Label Content="Title" FontSize="12" FontWeight="Bold" Foreground="Gray"/>
            <TextBox x:Name="TitleTextBox" Width="300" Height="25" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1"/>

            <Label Content="Description" FontSize="12" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Height="100" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1"/>

            <Label Content="Due Time" FontSize="12" FontWeight="Bold" Foreground="Gray" Margin="0,0,0,5"/>
            <DatePicker x:Name="DueDatePicker" Width="300" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,274,0,0">
            <Button Content="Cancel" Width="100" Height="30" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Add Task" Width="100" Height="30" Margin="0,0,0,0" Click="AddTaskButton_Click"/>
        </StackPanel>
    </Grid>
</Window>